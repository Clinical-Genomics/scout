variant: fcos
version: 1.1.0
passwd:
  users:
    - name: core
      ssh_authorized_keys:
        - ssh-rsa  example@laptop
storage:
  files:
    - path: /etc/systemd/system/scout-pod.service
      user:
        name: root
      group:
        name: root
      mode: 0644
      contents:
        local: rewritten/scout-pod.service
    - path: /etc/systemd/system/scout-create-datadir.service
      user:
        name: root
      group:
        name: root
      mode: 0644
      contents:
        local: rewritten/scout-create-datadir.service
    - path: /etc/systemd/system/scout-mongo.service
      user:
        name: root
      group:
        name: root
      mode: 0644
      contents:
        local: rewritten/scout-mongo.service
    - path: /etc/systemd/system/scout-setup-demo.service
      user:
        name: root
      group:
        name: root
      mode: 0644
      contents:
        local: rewritten/scout-setup-demo.service
    - path: /etc/systemd/system/scout-scout.service
      user:
        name: root
      group:
        name: root
      mode: 0644
      contents:
        local: rewritten/scout-scout.service
    - path: /etc/systemd/system-preset/20-scout.preset
      user:
        name: root
      group:
        name: root
      mode: 0644
      contents:
        local: 20-scout.preset
